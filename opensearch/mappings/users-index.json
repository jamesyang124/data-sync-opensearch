{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "1s",
    "analysis": {
      "analyzer": {
        "default": {
          "type": "standard"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "user_id": {
        "type": "keyword"
      },
      "username": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "channel_name": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "created_at": {
        "type": "date",
        "format": "epoch_millis"
      },
      "updated_at": {
        "type": "date",
        "format": "epoch_millis"
      },
      "subscriber_count": {
        "type": "long"
      },
      "verified": {
        "type": "boolean"
      },
      "description": {
        "type": "text",
        "analyzer": "standard"
      }
    }
  }
}
