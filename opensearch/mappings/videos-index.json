{
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "refresh_interval": "1s",
    "analysis": {
      "analyzer": {
        "default": {
          "type": "standard"
        }
      }
    }
  },
  "mappings": {
    "properties": {
      "video_id": {
        "type": "keyword"
      },
      "title": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      },
      "description": {
        "type": "text",
        "analyzer": "standard"
      },
      "channel_id": {
        "type": "keyword"
      },
      "view_count": {
        "type": "long"
      },
      "like_count": {
        "type": "long"
      },
      "published_at": {
        "type": "date",
        "format": "epoch_millis"
      },
      "duration_seconds": {
        "type": "integer"
      },
      "category": {
        "type": "keyword"
      },
      "created_at": {
        "type": "date",
        "format": "epoch_millis"
      },
      "updated_at": {
        "type": "date",
        "format": "epoch_millis"
      },
      "tags": {
        "type": "text",
        "analyzer": "standard",
        "fields": {
          "keyword": {
            "type": "keyword",
            "ignore_above": 256
          }
        }
      }
    }
  }
}
